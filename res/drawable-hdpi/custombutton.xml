<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:state_pressed="true">
        <shape>
            <solid
                    android:color="#000000"/>
            <stroke
                    android:color="#3BB8E6"/>
            <gradient
                    android:angle="180"
                    android:endColor="#33B5E5"
                    android:startColor="#3BB8E6"/>
            <padding
                    android:bottom="10dp"
                    android:right="10dp"
                    android:left="10dp"
                    android:top="10dp"/>
        </shape>
    </item>
    <item
            android:state_checked="true">
        <shape>
            <solid
                    android:color="#33B5E5"/>
            <stroke
                    android:color="#3BB8E6"/>
            <gradient
                android:angle="180"
                android:endColor="#33B5E5"
                android:startColor="#3BB8E6"/>
            <padding
                    android:bottom="10dp"
                    android:right="10dp"
                    android:left="10dp"
                    android:top="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#d6d6d6"/>
            <stroke
                    android:width="2dp"
                    android:color="#CFCFCF"/>
            <gradient
                android:startColor="#CFCFCF"
                android:endColor="#d6d6d6"
                android:angle="180"/>
            <padding
                    android:top="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
</selector>